{
  "name": "gemini-text-adventure",
  "version": "1.0.0",
  "description": "一個動態的文字冒險遊戲，故事、場景和選擇都由 Gemini 即時生成。",
  "main": "index.js",
  "scripts": {
    "build": "esbuild index.tsx --bundle --format=esm --target=es2022 --outfile=bundle.js --loader:.tsx=tsx --charset=utf8 --define:process.env.NODE_ENV='\"production\"'",
    "dev": "esbuild index.tsx --bundle --format=esm --target=es2022 --outfile=bundle.js --loader:.tsx=tsx --charset=utf8 --define:process.env.NODE_ENV='\"development\"' --watch --servedir=public"
  },
  "keywords": [
    "react",
    "gemini",
    "ai",
    "text-adventure"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "esbuild": "^0.21.4",
    "typescript": "^5.6.3",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.3"
  }
}
