{
  "name": "gemini-text-adventure",
  "version": "1.0.0",
  "description": "一個動態的文字冒險遊戲，故事、場景和選擇都由 Gemini 即時生成。",
  "main": "index.js",
  "scripts": {
    "build": "esbuild index.tsx --bundle --format=esm --target=es2022 --outfile=bundle.js --loader:.tsx=tsx --charset=utf8 --define:process.env.NODE_ENV=\"production\" --external:react --external:react-dom/client --external:@google/genai --external:react-image-crop"
  },
  "keywords": [
    "react",
    "gemini",
    "ai",
    "text-adventure"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "esbuild": "^0.21.4"
  }
}